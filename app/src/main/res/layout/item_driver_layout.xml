<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rowLayout"
    android:layout_margin="@dimen/_1sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/parentLayout"
        style="@style/cardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_74sdp"
        android:layout_margin="@dimen/_3sdp"
        android:padding="0dp"
        app:cardElevation="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/completeFlag"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:elevation="3dp"
                android:src="@drawable/ic_incomplete_star"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp">

                <RelativeLayout
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/childImg"
                        android:layout_width="@dimen/_65sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_1sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_driver" />

                    <TextView
                        android:id="@+id/vehicleNo_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/childImg"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="-11dp"
                        android:layout_marginBottom="5dp"
                        android:padding="@dimen/_2sdp"
                        android:text="XX-9999"
                        android:textAlignment="textEnd"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="21sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_1sdp"
                    android:paddingStart="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_1sdp">

                    <TextView
                        android:id="@+id/driverName_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:padding="@dimen/_2sdp"
                        android:text="Driver Name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_27sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/meterIn_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="999999"
                                android:textColor="#7f000051"
                                android:textSize="18sp">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Meter In"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_7sdp">

                            </TextView>


                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  /  "
                            android:textColor="#FF000000"
                            android:textSize="@dimen/_20sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/meterOut_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="999999"
                                android:textColor="#7f000051"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Meter Out"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="@dimen/_7sdp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/timeIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="Time In"
                            android:visibility="gone"></Button>

                        <Button
                            android:id="@+id/timeOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:text="Time Out">

                        </Button>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
